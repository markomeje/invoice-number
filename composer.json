{
  "name": "markomeje/invoice-number",
  "description": "Invoice number generator",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Markomeje\\Src\\": "src/"
    }
  },
  "authors": [
    {
      "role": "Developer",
      "name": "markomeje",
      "email": "markomejeonline@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "hashids/hashids": "^5.0"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require-dev": {
    "pestphp/pest": "^2.9",
    "phpunit/php-code-coverage": "^10.1",
    "phpstan/phpstan": "^1.11",
    "laravel/pint": "^1.17"
  },
  "scripts": {
    "pint": [
      "./vendor/bin/pint --config pint.json"
    ],
    "stan": [
      "./vendor/bin/phpstan analyse -- ./src"
    ],
    "test": [
      "./vendor/bin/pest"
    ]
  }
}
